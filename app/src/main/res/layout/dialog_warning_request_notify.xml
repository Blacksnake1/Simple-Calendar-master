<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bg_btn_unfocus"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="top|center"
            android:lineHeight="24dp"
            android:paddingHorizontal="16dp"
            android:text="Alert"
            android:textColor="#0B0B0B"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_please_turn_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineHeight="24dp"
            android:paddingHorizontal="16dp"
            android:text="Unable to load data. Please check your network connection and try again later."
            android:textColor="#0B0B0B"
            android:textSize="16dp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@id/tv_content_rate" />

        <TextView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="@string/close"
            android:textColor="#482a7a"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/btn_warning_setting"
            app:layout_constraintEnd_toStartOf="@id/btn_warning_setting"
            app:layout_constraintTop_toTopOf="@id/btn_warning_setting"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/btn_warning_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:text="Retry"
            android:textColor="#482a7a"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_please_turn_on" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
